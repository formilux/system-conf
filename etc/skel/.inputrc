# Ceci permet à BASH à partir de sa version 1.13 de gérer
# de supporter des entrées avec des caractères 8 bits.
set meta-flag on
set convert-meta off
set output-meta on
# This is for command line editing
"\e[3~":delete-char
"\e[1~":beginning-of-line
"\e[4~":end-of-line
"\C-h": backward-delete-char
"\e\C-h": backward-kill-word
"\C-?": backward-delete-char
"\e\C-?": kill-word
"\e\e[3~": kill-word
# those two are for rxvt
"\e[7~":beginning-of-line
"\e[8~":end-of-line
# on some xterm
"\e[H": beginning-of-line
"\e[F": end-of-line
